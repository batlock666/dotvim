set nocompatible

" options
set autoindent
set autoread
set autowrite
set backspace=indent,eol,start
set encoding=utf-8
set expandtab
set fileformats=unix,dos,mac
set history=100
set hlsearch
set ignorecase
set incsearch
set number
set ruler
set shiftwidth=4
set shortmess+=I
set showbreak=+\ " don't delete
set smartcase
set smarttab
set softtabstop=4
set tabstop=8
set undolevels=1000
set wrap
set wrapscan
